<div class="profile-container row mt-5">
  <div class="img mr-3">
    <img style="width: 18rem;" src="{{user.image}}" alt="Card image cap">
  </div>
  <div style="width: 18em;">
    <div class="card-body">
      <h5 class="title">{{user.name}}</h5>
      <p calss="email">{{user.email}}</p>
      <p calss="comment">{{userResult.length}}則已評論餐廳</p>
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
    </div>
  </div>
</div>

<div class="d-flex flex-wrap py-4 px-4">
  {{#each userResult}}
  <a href="/restaurants/{{this.id}}">
    <img src="{{this.image}}" alt="restaurantImg" class="img px-2 py-2" style="width: 100px">
  </a>
  {{/each}}
</div>