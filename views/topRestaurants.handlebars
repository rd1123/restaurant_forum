<h1>人氣餐廳</h1>
<hr />
<div>
  {{#each restaurants}}
  <div class="card shadow-sm mx-auto  mb-5" style="max-width: 600px;">
    <div class="row">
      <div class="col-md-4">
        <img class="card-img-left" src="{{this.image}}" alt="Card image cap" width="200px" height="170px">
      </div>
      <div class="col-md-8">
        <div class="col card-body card-block">
          <h3 class="card-text">
            <a href="/restaurants/{{this.id}}">
              {{this.name}}
            </a>
          </h3>
          <span class="badge badge-secondary">收藏數:{{this.favoriteCount}}</span>
          <p class="card-text">{{this.description}}</p>
          <div class="row ml-1">
            <div class="favorite mr-3">
              {{#if this.isFavorited}}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
                <button type="submit" style="border: none; background:none; padding: 0;"><i class="fa fa-heart"
                    aria-hidden="true" style="color:red"></i></button>
              </form>
              {{else}}
              <form action="/favorite/{{this.id}}" method="POST">
                <button type="submit" style="border: none; background:none; padding: 0;"><i class="fa fa-heart"
                    aria-hidden="true"></i></button>
              </form>
              {{/if}}
            </div>
            <div class="like">
              {{#if isLiked}}
              <form action="/like/{{this.id}}?_method=DELETE" method="POST">
                <button type="submit" style="border: none; background:none; padding: 0;"><i class="fa fa-thumbs-up"
                    aria-hidden="true" style="color:blue;"></i></button>
              </form>
              {{else}}
              <form action="/like/{{this.id}}" method="POST">
                <button type="submit" style="border: none; background:none; padding: 0;"><i class="fa fa-thumbs-o-up"
                    aria-hidden="true"></i></button>
              </form>
              {{/if}}
            </div>
          </div>

        </div>
      </div>

    </div>

  </div>
  {{/each}}
</div>

